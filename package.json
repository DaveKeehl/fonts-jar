{
	"name": "google-fonts-collection",
	"version": "1.0.0",
	"description": "",
	"scripts": {
		"clean": "rm -rf dist/ && npm run format",
		"format": "npx prettier --write .",
		"prepare": "husky install && npm run build",
		"prebuild": "npm run clean",
		"build": "mkdir dist && cp src/manifest.json dist/ && cp -R src/content_script dist/ && cp -R src/popup dist/popup/ && cp -R src/images/ dist/images",
		"precompress": "npm run build && rm -rf google-fonts-collection.tgz",
		"compress": "tar -czf google-fonts-collection.tgz dist"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DaveKeehl/google-fonts-collection.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/DaveKeehl/google-fonts-collection/issues"
	},
	"homepage": "https://github.com/DaveKeehl/google-fonts-collection#readme",
	"devDependencies": {
		"husky": "^7.0.4",
		"lint-staged": "^12.3.2",
		"prettier": "2.5.1"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	}
}
