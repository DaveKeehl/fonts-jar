{
	"name": "fonts-jar",
	"version": "1.0.0",
	"description": "Save your favorite Google fonts so you never forget they exist.",
	"scripts": {
		"clean": "rm -rf dist/ && npm run format",
		"format": "npx prettier --write .",
		"prepare": "husky install && npm run build",
		"prebuild": "npm run clean",
		"build:prepare": "mkdir dist && cp src/manifest.json dist/",
		"build:assets": "cp -R src/assets/ dist/assets",
		"build:content_script": "node esbuild.content_script.config.js",
		"build:popup": "cp -R src/popup dist/popup/ && rm -rf dist/popup/scripts && node esbuild.popup.config.js",
		"build": "npm run build:prepare && npm run build:content_script && npm run build:popup && npm run build:assets",
		"postbuild": "rm -rf fonts-jar.tgz && tar -czf fonts-jar.tgz dist"
	},
	"type": "module",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/DaveKeehl/google-fonts-collection.git"
	},
	"author": "",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/DaveKeehl/google-fonts-collection/issues"
	},
	"homepage": "https://github.com/DaveKeehl/google-fonts-collection#readme",
	"devDependencies": {
		"@types/chrome": "^0.0.177",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.2",
		"prettier": "2.5.1"
	},
	"lint-staged": {
		"**/*": "prettier --write --ignore-unknown"
	},
	"dependencies": {
		"esbuild": "^0.14.16"
	}
}
